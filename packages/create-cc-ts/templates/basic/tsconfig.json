{
  "$schema": "https://raw.githubusercontent.com/MCJack123/TypeScriptToLua/master/tsconfig-schema.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [ "ESNext" ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "strictNullChecks": true,
    "types": [
      "@jackmacwindows/lua-types/cc-5.2",
      "@jackmacwindows/craftos-types",
      "@jackmacwindows/cc-types"
    ],
    "outDir": "dist",
  },
  "tstl": {
    "luaTarget": "CC-5.2",
    "luaLibImport": "require-minimal",
    "buildMode": "default", // Default allows importing lua code from node_modules
  },
  "include": [ "src/**/*.ts" ]
}